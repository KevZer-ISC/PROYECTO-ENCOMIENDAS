@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section head{
    <link rel="stylesheet" type="text/css" href="~/www/app-assets/vendors/css/charts/jquery-jvectormap-2.0.3.css">
    <link rel="stylesheet" type="text/css" href="~/www/app-assets/vendors/css/charts/morris.css">
    <link rel="stylesheet" type="text/css" href="~/www/app-assets/vendors/css/extensions/unslider.css">
    <link rel="stylesheet" type="text/css" href="~/www/app-assets/vendors/css/weather-icons/climacons.min.css">
    <link rel="stylesheet" type="text/css" href="~/www/app-assets/css/core/colors/palette-gradient.css">
    <link rel="stylesheet" type="text/css" href="~/www/app-assets/css/plugins/calendars/clndr.css">
    <link rel="stylesheet" type="text/css" href="~/www/app-assets/css/core/colors/palette-climacon.css">
    <link rel="stylesheet" type="text/css" href="~/www/app-assets/css/pages/users.css">
}
<div class="row">
    <div class="col-md-9">
        <div class="row">
            <div class="col-xl-4 col-lg-6 col-12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="media d-flex">
                                <div class="align-self-center">
                                    <i class="icon-pencil info font-large-2 float-left"></i>
                                </div>
                                <div class="media-body text-right">
                                    <h3>278</h3>
                                    <span>Nuevas Cotizaciones</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-6 col-12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="media d-flex">
                                <div class="align-self-center">
                                    <i class="icon-speech warning font-large-2 float-left"></i>
                                </div>
                                <div class="media-body text-right">
                                    <h3>156</h3>
                                    <span>Documentos Observados</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-6 col-12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="media d-flex">
                                <div class="align-self-center">
                                    <i class="icon-graph success font-large-2 float-left"></i>
                                </div>
                                <div class="media-body text-right">
                                    <h3>64.89 %</h3>
                                    <span>Ventas</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card-body chartjs">
                    <canvas id="line-chart" height="380"></canvas>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-3">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body text-center">
                            <div class="card-header mb-2">
                                <span class="deep-orange darken-1">Total Ventas</span>
                                <h3 class="font-large-2 grey darken-1 text-bold-200">$24,879</h3>
                            </div>
                            <div class="card-content">
                                <input type="text" value="75" class="knob hide-value responsive angle-offset" data-angleOffset="0" data-thickness=".15" data-linecap="round" data-width="150" data-height="150" data-inputColor="#e1e1e1" data-readOnly="true" data-fgColor="#FF5722" data-knob-icon="ft-trending-up">
                                <ul class="list-inline clearfix mt-2 mb-0">
                                    <li class="border-right-grey border-right-lighten-2 pr-2">
                                        <h2 class="grey darken-1 text-bold-400">75%</h2>
                                        <span class="deep-orange">Completados</span>
                                    </li>
                                    <li class="pl-2">
                                        <h2 class="grey darken-1 text-bold-400">25%</h2>
                                        <span class="danger">Procesando</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>


<!--  -->
<div class="row match-height">

</div>
<!--/  -->

