    <script src="~/www/app-assets/vendors/js/extensions/jquery.knob.min.js" type="text/javascript"></script>
    <script src="~/www/app-assets/js/scripts/extensions/knob.js" type="text/javascript"></script>
    <script src="~/www/app-assets/vendors/js/charts/raphael-min.js" type="text/javascript"></script>
    <script src="~/www/app-assets/vendors/js/charts/morris.min.js" type="text/javascript"></script>
    <script src="~/www/app-assets/vendors/js/charts/jvector/jquery-jvectormap-2.0.3.min.js" type="text/javascript"></script>
    <script src="~/www/app-assets/vendors/js/charts/jvector/jquery-jvectormap-world-mill.js" type="text/javascript"></script>
    <script src="~/www/app-assets/data/jvector/visitor-data.js" type="text/javascript"></script>

    <script src="~/www/app-assets/vendors/js/charts/jquery.sparkline.min.js" type="text/javascript"></script>
    <script src="~/www/app-assets/vendors/js/extensions/unslider-min.js" type="text/javascript"></script>
    <script src="~/www/app-assets/vendors/js/tables/datatable/datatables.min.js" type="text/javascript"></script>
    <script src="~/www/app-assets/js/scripts/pages/dashboard-analytics.js" type="text/javascript"></script>
